# Database Configuration
DATABASE_URL=postgresql://iwanna:iwanna_password@localhost:5432/iwanna_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=iwanna_db
DB_USER=iwanna
DB_PASSWORD=iwanna_password

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration (Phase 1B: Anonymous Auth)
JWT_ACCESS_SECRET=your-access-secret-minimum-32-chars-change-this-in-production
JWT_REFRESH_SECRET=your-refresh-secret-minimum-32-chars-change-this-in-production
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=90d

# Server Configuration
PORT=3001
NODE_ENV=development
API_VERSION=v1

# CORS Configuration
CORS_ORIGIN=http://localhost:8081,http://localhost:19006

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Tier Rate Limits (Phase 1B: Anonymous Auth)
TIER1_WANNAS_PER_DAY=5
TIER2_WANNAS_PER_DAY=10
TIER3_WANNAS_PER_DAY=999

# SMS Service (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# AI Services (Phase 1C: Wanna Creation)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
ANTHROPIC_API_KEY=your-anthropic-api-key

# Vector Database (Pinecone)
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=your-pinecone-environment

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-this

# Feature Flags
ENABLE_ANALYTICS=false
ENABLE_CRASH_REPORTING=false
ENABLE_AI_FEATURES=true
